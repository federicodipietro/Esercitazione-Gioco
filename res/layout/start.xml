<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txViewUtente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome_utente" />

    <EditText
        android:id="@+id/eTextUtente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txViewAvversario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome_avversario" />

    <EditText
        android:id="@+id/eTextAvversario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnPlay" />

</LinearLayout>